<!DOCTYPE html>
<html>
  <head>
    <title>BookCard</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="header__title">
        <%= link_to "book-card", root_path , class: "header__title--text" %>
      </div>
      <div class="header__right" >
        <% if user_signed_in? %>
          <% if request.path.include?("users") %>
            <%= link_to "本を投稿", new_card_path, class: "header__right--btn" %>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "header__right--btn" %>
          <% else %>
            <%= link_to "マイページ", user_path(current_user), class: "header__right--btn" %>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "header__right--btn" %>
          <% end %>
        <% else %>
          <%= link_to "ログイン", new_user_session_path, class: "header__right--btn" %>
          <%= link_to "新規登録", new_user_registration_path, class: "header__right--btn" %>
        <% end %>
      </div>
    </header>

    <div class="hamberger_menu">
      <% if user_signed_in? %>
        <% if request.path.include?("users") && current_user.id == @user.id%>
          <!-- 三本線 -->
          <div class="hamberger_line">
            <span></span>
            <span></span>
            <span></span>
          </div>

          <!-- クリックしたときのメニュー -->
          <nav class="hamberger_list">
            <ul>
              <li><a href="#">ドロワー1</a></li>
              <li><a href="#">ドロワー2</a></li>
              <li><a href="#">ドロワー3</a></li>
            </ul>
          </nav>
        <% end %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
