<div class="Sess">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="SessBox">
      <div class="SessBox__Login">
        ログイン
      </div>
      <div class="fields">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: :fields__content %>
      </div>

      <div class="fields">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: :fields__content %>
      </div>

      <div class="actions">
        <div class="actions__btn">
          <%= f.submit "ログイン", id: :FielName %>
        </div>
      </div>
    </div>

  <% end %>
</div>