<div class="Sess">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="SessBox">
      <div class="SessBox__Login">
        ログインページ
      </div>
      <div class="fields">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", id: :FieldCon %>
      </div>

      <div class="fields">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password", id: :FieldCon %>
      </div>

      <%# <% if devise_mapping.rememberable? %>
        <%# <div class="fields">
          <%= f.check_box :remember_me %>
          <%# <%= f.label :remember_me %>
        <%# </div>
      <% end %>

      <div class="actions">
        <div class="actions__btn">
          <%= f.submit "ログイン", id: :FielName %>
        </div>
      </div>
    </div>
  <% end %>
</div>